{
  "manifest_version": 3,
  "name": "Time Limit Website Blocker",
  "description": "Limit time spent on selected websites with daily or weekly caps.",
  "version": "0.1.0",
  "permissions": ["storage", "tabs", "alarms"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "incognito": "split",
  "minimum_chrome_version": "114"
}
